  pname = "mrpt_libslam";
  version = "2.14.6-1";
  src = finalAttrs.passthru.sources."mrpt_libslam";
  nativeBuildInputs = rosSystemPackages.getPackages { forNativeBuildInputs = [ "cmake" ]; };
